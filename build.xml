<project>
	<target name="war-all">
		<junit printsummary="yes" fork="yes" showoutput="true">
			<batchtest todir="${test.results.dir}">
				<fileset dir="build">
					<include name="**/*Test.java" />
				</fileset>
			</batchtest>
			<classpath path="${classes.dir}:${junit.jar}:${test.classes.dir}" />
			<formatter usefile="false" type="plain" />
		</junit>
	</target>
</project>