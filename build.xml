<project>
    <property name="testbin" value="build"/>
	<target name="war-all">
		<junit printsummary="yes" fork="yes" showoutput="true">
			<batchtest fork="yes">
				<fileset dir="build">
					<include name="**/*Test.class" />
				</fileset>
			</batchtest>
			<classpath path="${classes.dir}:${junit.jar}:${test.classes.dir}" />
			<formatter usefile="false" type="brief" />
		</junit>
	</target>
</project>